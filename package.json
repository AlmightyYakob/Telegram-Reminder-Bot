{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for reminders",
  "main": "index.js",
  "scripts": {
    "start": "nodemon src/index.js --exec 'yarn test && babel-node'",
    "build": "yarn babel src/ --out-dir bin/ --copy-files",
    "up": "pm2 start bin/index.js -n telegram-bot --log-date-format 'YYYY-MM-DD HH:mm:ss Z'",
    "down": "pm2 delete telegram-bot",
    "restart": "yarn down; yarn up",
    "reload": "yarn build && yarn restart",
    "test": "eslint src/*.js"
  },
  "author": "Jake <jjnesbitt2@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "http": "^0.0.0",
    "https": "^1.0.0",
    "lodash": "^4.17.10",
    "dotenv": "^8.2.0"
  },
  "repository": "https://github.com/AlmightyYakob/remindMeBot.git",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^5.3.0",
    "nodemon": "^1.18.3"
  }
}
